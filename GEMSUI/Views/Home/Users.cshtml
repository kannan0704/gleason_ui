@model List<User>
@{
    ViewData["Title"] = "GEMS Cloud Web Application - Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @if (TempData["Message"] != null)
    {
        <span class="text-danger">@TempData["Message"]</span>
    }
    <div class="card">
        <div class="card-header">
            <h4 class="h4"><a asp-action="CreateUser" asp-controller="Home">Create New User</a></h4>
        </div>
    </div>
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <tr>
                <th>Customer</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Is Trail User</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Customer</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.Roles</td>
                    <td><input type="checkbox" checked="@(Convert.ToBoolean(item.TrialUser))" readonly="readonly" disabled="disabled" /></td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@item.UserId" class="btn btn-sm btn-primary" asp-controller="Home">Edit</a>&nbsp;&nbsp;
                        <a asp-action="DeleteUser" asp-route-id="@item.UserId" class="btn btn-sm btn-danger" asp-controller="Home">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
